.product-prev
	a(href="").product-prev__header
		.product-prev__marks
			.product-prev__mark.product-prev__mark--bg-yellow -30%
		img(src="images/content/products/product-prev-2.jpg" alt="Превью товара").product-prev__img
	a(href="").product-prev__body
		.product-prev__title
			span.product-prev__name Планка стыковочная 30×30×2000 мм, толщина 0.4 мм, цвет графитовый серый RAL 7024
			span.count-text 10 шт.
		.product-prev__info-wrapper
			.product-prev__info
				.product-prev__info-label Артикул
				.product-prev__info-value 13763515
			.product-prev__info.product-prev__info--wide
				.product-prev__info-label Срок изготовления
				.product-prev__info-value от 2 до 5 дней
		.product-prev__price
			.product-prev__price-old 80 руб.
			.product-prev__price-current 76 руб. за шт.
	.product-prev__footer
		button.btn.btn--fill
			+icon('cart', 'btn__icon')
			span В корзину
